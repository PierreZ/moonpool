# Automatically load the Nix development environment if Nix is available
if command -v nix &> /dev/null; then
    echo "🔄 Loading Nix development environment..."
    use flake
else
    echo "⚠️  Nix not found. Install Nix to use the development environment."
    echo "   Visit: https://nixos.org/download.html"
    
    # Fallback: check if rust toolchain is available
    if command -v rustc &> /dev/null; then
        echo "✅ Using system Rust toolchain: $(rustc --version)"
    else
        echo "❌ No Rust toolchain found. Please install Rust or Nix."
    fi
fi